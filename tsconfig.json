{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript features
    "module": "CommonJS", // Node.js uses CommonJS modules
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "src", // Root directory for source files
    "esModuleInterop": true, // Enable interoperability for CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "declaration": true // Generate .d.ts files for type definitions
  },
  "include": ["src"], // Include the source directory
  "exclude": ["node_modules", "dist"] // Exclude unnecessary directories
}
